<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user" class="xml.demo01.User"></bean>

    <bean id="book" class="xml.demo01.Book">
        <property name="bookName" value="厄舍府的崩塌"></property>
        <property name="bookAuthor" value="Allen Poe"></property>
    </bean>

    <bean id="orders" class="xml.demo01.Orders">
        <constructor-arg name="oname" value="马云"></constructor-arg>
        <constructor-arg name="address" value="杭州"></constructor-arg>
    </bean>

    <bean id="book02" class="xml.demo01.Book" p:bookName="我" p:bookAuthor="你"></bean>

    <!-- 仅仅是引入外部类，并没有注入属性   -->
    <bean id="userService" class="xml.dao.UserService">
        <property name="userDao" ref="userDao"></property>
    </bean>
    <bean id="userDao" class="xml.dao.UserDaoImpl"></bean>
</beans>